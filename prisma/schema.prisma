datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Item {
    id          Int         @id @default(autoincrement())
    cartItem    CartItem?    @relation("cartItemItem")
    name        String
}

model CartItem {
    id              Int             @id @default(autoincrement())
    item            Item            @relation(name: "cartItemItem", fields: [itemId], references: [id])
    itemId          Int
    shoppingCart    ShoppingCart    @relation(name: "cartCartItems", fields: [shoppingCartId], references: [id])
    shoppingCartId  Int
}

model ShoppingCart {
    id          Int         @id @default(autoincrement())
    customer    Customer?    @relation(name: "customerCart", fields: [customerId], references: [id])
    customerId  Int
    cartItems   CartItem[]  @relation(name: "cartCartItems")
}

model Customer {
  id            Int    @id @default(autoincrement())
  name          String
  email         String @unique
  password      String
  shoppingCart  ShoppingCart? @relation(name: "customerCart")
}
